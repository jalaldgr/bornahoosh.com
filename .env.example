# Environment
ENVIRONMENT=production

# Django Settings
DEBUG=False
SECRET_KEY=your-secret-key-here-generate-new-one
ALLOWED_HOSTS=bornahoosh.com,www.bornahoosh.com
CORS_ALLOWED_ORIGINS=https://bornahoosh.com,https://www.bornahoosh.com

# Database
POSTGRES_DB=bornahoosh_db
POSTGRES_USER=bornahoosh_user
POSTGRES_PASSWORD=your-strong-password-here

# Redis
REDIS_URL=redis://redis:6379/0

# Next.js
NEXT_PUBLIC_API_URL=https://bornahoosh.com/api

# Email (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Security (optional)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True